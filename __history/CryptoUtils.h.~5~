// CryptoUtils.h
#ifndef CRYPTOUTILS_H
#define CRYPTOUTILS_H

#include <string>
#include <vector>
#include <stdexcept>
#include <windows.h>
#include <wincrypt.h>
#include <atlenc.h> // Для функцій CryptBinaryToStringA та CryptStringToBinaryA

namespace CryptoUtils {
    // Функція конвертації байтів у Base64
    std::string BytesToBase64(const std::vector<BYTE>& data);

    // Функція конвертації Base64 у байти
    std::vector<BYTE> Base64ToBytes(const std::string& base64Str);

    // Функція для хешування пароля з використанням SHA-256
    std::string HashPassword(const std::string& password);

    // Генерація випадкової солі
    std::string GenerateRandomSalt();

    // Функції для шифрування та дешифрування даних (опціонально)
    std::vector<BYTE> EncryptData(const std::string& plainText);
    std::string DecryptData(const std::vector<BYTE>& encryptedData);

    // Функція перевірки пароля
    bool VerifyPassword(const std::string& inputPassword, const std::string& storedHashWithSalt);
}

#endif // CRYPTOUTILS_H

